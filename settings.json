{
    "WindowSize": { // Настройки размера окна
        "Width": 0, // Ширина окна (в пикселях), где 0 означает использование значения по умолчанию или автоматическую настройку
        "Hight": 0 // Высота окна (в пикселях), где 0 означает использование значения по умолчанию или автоматическую настройку
    },
    "Bot": { // Настройки для бота
        "IsWhiteBot": false, // Указывает, является ли бот белым игроком (true - белый бот, false - человечек)
        "IsBlackBot": true, // Указывает, является ли бот черным игроком (true - черный бот, false - человечек)
        "WhiteBotLevel": 0, // Уровень сложности белого бота, где 0 обозначает минимальный уровень (например, случайные ходы)
        "BlackBotLevel": 5, // Уровень сложности черного бота, где 5 обозначает высокий уровень сложности (например, оптимальные ходы)
        "BotScoringType": "NumberAndPotential", // Метрика для оценки ходов ботом: 'NumberAndPotential' - учитываются как количество возможных ходов, так и потенциал дальнейших возможностей
        "BotDelayMS": 0, // Задержка между ходами бота в миллисекундах, 0 - значит нет задержки
        "NoRandom": false, // Указывает, будет ли использоваться случайный выбор ходов (true - случайные ходы отключены)
        "Optimization": "O1" // Уровень оптимизации алгоритма, где 'O1' означает, что алгоритм использует константное время, может также означать различные уровни оптимизации
    },
    "Game": { // Настройки игры
        "MaxNumTurns": 120 // Максимальное количество ходов в игре, после которого игра завершится, например, 120 ходов
    }
}

